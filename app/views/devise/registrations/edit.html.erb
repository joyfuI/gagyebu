<h2>계정 설정</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <div class="field">
    <%= f.label :email, '이메일' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label :password, '새 비밀번호' %> <i>(변경을 원하지 않으시면 비워두세요)</i><br />
    <%= f.password_field :password, autocomplete: 'new-password' %>
    <% if @minimum_password_length %>
      <em>(최소 <%= @minimum_password_length %>자)</em>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, '비밀번호 확인' %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
  </div>
  <div class="field">
    <%= f.label :current_password, '현재 비밀번호' %><br />
    <%= f.password_field :current_password, autocomplete: 'current-password' %>
  </div>
  <div class="actions">
    <%= f.submit '수정' %>
  </div>
<% end %>
<h3>회원탈퇴</h3>
<p>
  <%= button_to '탈퇴', registration_path(resource_name), form: {
    data: {
      turbo_confirm: '탈퇴하시겠습니까?'
    }
  }, method: :delete %>
</p>
<%= link_to '뒤로', :back %>
